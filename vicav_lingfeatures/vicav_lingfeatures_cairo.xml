                        <cell rend="tdLeft">
                            <hi rend="bold">Pronouns</hi>
                        </cell>
                        <cell rend="tdCom"/>
                        <cell rend="tdCentre"/>
                        <cell rend="tdRight"/>
                        <cell rend="tdID"/>
                    </row>
                    <row>
                        <cell rend="tdLeft">I</cell>
                        <cell rend="tdCom"/>
                        <cell rend="tdCentre">I am a teacher.</cell>
                        <cell rend="tdRight">
                            <hi rend="red">ʔana</hi> mudarris.</cell>
                        <cell rend="tdID"/>
                    </row>
